" Use Vim defaults
set nocompatible

" Ignore the arrow keys and use hjkl instead
map <Up> <Nop>
map <Down> <Nop>
map <Left> <Nop>
map <Right> <Nop>

" Backspace over everything in insert mode
set backspace=indent,eol,start

" Store 50 things into history
set history=50

" Set the line number on
set number

" Set syntax highlighting on
syntax on

" Set search highlighting
set hlsearch

" I like to use a light on dark terminal
set background=dark

" Show the status bar
set showcmd

" Improve tab completion
set wildmode=longest,list

" Set the scroll buffer
set scrolloff=10
